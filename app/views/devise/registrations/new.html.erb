<!DOCTYPE html>
<html>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="opaque-overlay">
    <div class="container p-4">
      
      <!-- Inicio: cadastro user -->
      <div class="container">
        <div class="row setup-content">
          <div class="col-lg-12 well text-center profile"> 
          <div class="profile-content">
            <h2 class="text-dark">Cadastre Seu usuário</h2>
              <form class="form-horizontal" role="form">
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Nome:</label>
                        <div class="col-md-9">
                          <%= f.text_field :name, class: "form-control", id: "name", placeholder: "João", autofocus: true %>
                        </div>
                   </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Sobrenome:</label>
                    <div class="col-md-9">
                        <%= f.text_field :surname, class: "form-control", id: "surname", placeholder: "Silva", autofocus: true %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Usuário:</label>
                    <div class="col-md-9">
                        <%= f.text_field :username, class: "form-control", id: "username", placeholder: "Ex: joaosilva", autofocus: true %>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">E-mail:</label>
                    <div class="col-md-9">
                      <%= f.text_field :email, class: "form-control", id: "email", placeholder: "joao@example.com", autofocus: true %>
                      
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Senha:</label>
                    <div class="col-md-9">
                      <%= f.password_field :password, class: "form-control", id: "senha", placeholder: "Senha (no mínimo " + @minimum_password_length.to_s + " caracteres)", autofocus: true %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Confirmar senha:</label>
                    <div class="col-md-9">
                      <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation", placeholder: "Confirme a senha", autofocus: true %>
                      
                    </div>
                  </div>
                </div>
          
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-sign-up "></i>Próxima Etapa</button>
                      
                    </div>
                  </div>                    
                </div>

              </form>

            </div>
            </div>  
          </div>
      </div>
      <!-- Fim: cadastro user -->
      
    </div>
  </div>
  

  <% end %>
  
</html>
