<%= form_for(@profile, html: { multipart: true }) do |f| %>
  <div class="opaque-overlay">
    <div class="container p-4">
      <div class="container">
        <div class="row setup-content">
          <div class="col-lg-12 well text-center profile"> 
            <div class="profile-content">
              <% if action_name == "new" %>
                <h2 class="text-dark">Cadastre Seu Negócio</h2>
              <% elsif action_name == "edit" %>
                <h2 class="text-dark">Edite Informações sobre Seu negócio.</h2>
              <% end %>
              <br>
              <form class="form-horizontal" role="form">
                
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Imagem do Negócio:</label>
                      <div class="col-md-9">
                        <%= f.file_field :image , class: 'form-control' %>
                      </div>
                   </div>
                </div>
                
                
                
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Nome do Negócio:</label>
                      <div class="col-md-9">
                        <%= f.text_field :business_name, class: "form-control", id: "email", placeholder: "Nome do seu negócio", autofocus: true %>
                      </div>
                   </div>
                </div>
                
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Descrição:</label>
                      <div class="col-md-9">
                          <%= f.text_field :description, class: "form-control", id: "description", placeholder: "Faça uma breve descrição do seu negócio.", autofocus: true %>
                      </div>
                   </div>
                </div>
          
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Categoria do Negócio:</label>
                    <div class="col-md-9">
                      <div class="ui-select">
                        <%= f.select(:category, options_for_select(
                          [
                            ['Carrinho de Comida', 'Carrinho de Comida'],
                            ['Lanchonete', 'Lanchonete'],
                            ['Carro de Comida', 'Carro de Comida'],
                            ['Marmitaria', 'Marmitaria'],
                            ['Caminhão de Comida', 'Caminhão de Comida'],
                            ['Individual', 'Individual']
                          ], @default_value
                        ), {}, {class:"form-control"})%>
                      </div>
                    </div>
                  </div>
                </div>
  
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Endereço:</label>
                    <div class="col-md-9">
                        <%= f.text_field :address, class: "form-control", id: "address", placeholder: "Indique seu endereço", autofocus: true %>
                    </div>
                    <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-sign-up"></i>Localizar</button>
                  </div>
                </div>

  
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Contato:</label>
                    <div class="col-md-9">
                        <%= f.text_field :phone, class: "form-control", id: "email", placeholder: "(55) 95555-5555", autofocus: true %>
                    </div>
                  </div>
                </div> 
  
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Forma de Pagamento:</label>
                    <div class="col-md-9">
                      <% PaymentMethod.all.each do |payment_method| %>
                        <div class="form-check form-check-inline">
                          <label>
                            <%= check_box_tag "profile[payment_method_ids][]", payment_method.id, f.object.payment_methods.include?(payment_method) %>
                            <%= payment_method.name %>
                          </label>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
  
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-sign-up"></i>Finalizar</button>
                    </div>
                  </div>                    
                </div>
                
              </form>
            </div>
          </div>  
        </div>
      </div>  
    </div>
  </div>
  <!-- Fim: cadastro business -->
<% end %>
