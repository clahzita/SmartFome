<%= form_for(@profile) do |f| %>
<div class="opaque-overlay">
    <div class="container p-4">
        <div class="container">
            <div class="row setup-content">
              <div class="col-lg-12 well text-center profile"> 
                  <div class="profile-content">
                    <h2 class="text-dark">Cadastre Seu Negócio</h2>
                    <form class="form-horizontal" role="form">
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Nome do Negócio:</label>
                          <div class="col-md-9">
                            <%= f.text_field :business_name, class: "form-control", id: "email", placeholder: "Nome do seu negócio", autofocus: true %>
                          </div>
                   </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-3 control-label">Descrição:</label>
                        <div class="col-md-9">
                            <%= f.text_field :description, class: "form-control", id: "description", placeholder: "Faça uma breve descrição do seu negócio.", autofocus: true %>
                        </div>
                   </div>
                </div>
                
                <div class="form-group">
                    <div class="row">
                      <label class="col-md-3 control-label">Categoria do Negócio:</label>
                      <div class="col-md-9">
                          <div class="ui-select">
                               <%= select_tag( ':category', options_for_select(
                              [
                                ['Carrinho de Comida', 'carrinho'],
                                ['Lanchonete', 'lanchonete'],
                                ['Carro de Comida', 'carro'],
                                ['Marmitaria', 'marmitaria'],
                                ['Caminhão de Comida', 'caminhao'],
                                ['Individual', 'individual']
                              ], 'carrinho'
                            ), class:"form-control")%>
                            
                          </div>

                      </div>
                    </div>
                  </div>
                  

                <div class="form-group">
                    <div class="row">
                      <label class="col-md-3 control-label">Endereço:</label>
                      <div class="col-md-9">
                          <%= f.text_field :address, class: "form-control", id: "address", placeholder: "Indique seu endereço", autofocus: true %>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="row">
                      <label class="col-md-3 control-label">Contato:</label>
                      <div class="col-md-9">
                          <%= f.text_field :phone, class: "form-control", id: "email", placeholder: "(55) 95555-5555", autofocus: true %>
                      </div>
                    </div>
                  </div>
                  

                  <div class="form-group">
                    <div class="row">
                      <label class="col-md-3 control-label">Forma de Pagamento:</label>
                      <div class="col-md-9">
                        <%= f.text_field :payment_method, class: "form-control", id: "email", placeholder: "Método de pagamento", autofocus: true %>
                        <div class="form-check form-check-inline">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1"> Dinheiro
                    </label>
                  </div>
                  <div class="form-check form-check-inline">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2"> Cartão Débito
                    </label>
                  </div>
                  <div class="form-check form-check-inline">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2"> Cartão Crédito
                    </label>
                  </div>

                      </div>
                    </div>
                  </div>

                   <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-sign-up"></i>Finalizar</button>
                      
                    </div>
                  </div>                    
                </div>
                </form>
                 </div>
            </div>  
          </div>
          </div>
            
        </div>
    </div>
      
      <!-- Fim: cadastro business -->
      


        

<% end %>
